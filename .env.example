# ========================================
# CONFIGURATION BACKEND - EXEMPLE
# ========================================
# Copier ce fichier en .env et remplacer les valeurs

# ========================================
# SÉCURITÉ JWT
# ========================================
# IMPORTANT: Générez des clés uniques avec: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=CHANGEZ_MOI_GENEREZ_UNE_CLE_FORTE_AVEC_SECRETS_TOKEN_HEX_32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================
# FLASK
# ========================================
FLASK_SECRET_KEY=CHANGEZ_MOI_AUSSI_GENEREZ_UNE_CLE_FORTE
FLASK_ENV=production
FLASK_DEBUG=False

# ========================================
# CORS - Domaines autorisés
# ========================================
# En production, remplacez par votre domaine: https://votresite.com
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ========================================
# RATE LIMITING
# ========================================
# Stockage: memory:// (dev) ou redis://localhost:6379 (prod)
RATE_LIMIT_STORAGE_URL=memory://
RATE_LIMIT_DEFAULT=100 per hour

# ========================================
# HTTPS & SÉCURITÉ
# ========================================
# Activer uniquement si HTTPS est configuré
ENABLE_HTTPS=False
FORCE_HTTPS=False

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO
LOG_FILE=logs/security.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ========================================
# OLLAMA (IA)
# ========================================
OLLAMA_MODEL=qwen2.5-coder:14b
OLLAMA_HOST=http://localhost:11434

# ========================================
# BASE DE DONNÉES (Optionnel - pour migration future)
# ========================================
# DATABASE_URL=postgresql://user:password@localhost:5432/pyquest

# ========================================
# ENVIRONNEMENT
# ========================================
ENVIRONMENT=development
# En production: ENVIRONMENT=production

# ========================================
# OLLAMA (IA)
# ========================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:14b
OLLAMA_TIMEOUT=60

